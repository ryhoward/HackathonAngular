<div class="CenterDiv" ng-controller="ProductsController">
    <section>
        <div>
            <label>Search: </label>
            <input type="text" ng-model="searchWord" ng-change="searchChanged()" />
            <label>Category Filter: </label>
            <select ng-model="selectedCategory" ng-change="categoryChanged()">
                <option ng-repeat="category in productCategories" value="{{category.productCategoryId}}">{{category.name}}</option>
            </select>
        </div>
    </section>
    <section>
        <div class="ProductsDiv">
            <ul class="ProductsList">
                <li class="ProductListItem" ng-repeat="product in filteredProducts">
                    <table class="ProductItemTable">
                        <tr>
                            <td class="TRImg">
                                <img class="ProductImg" src="../Resources/{{product.imgPath}}.jpg" />
                            </td>
                            <td class="TRDetails">
                                <h5 class="ProductItemPrice">${{product.price}}</h5>
                                <h5 class="ProductItemName" title="{{product.description}}" ng-bind="product.name"></h5>
                            </td>
                            <td class="TRPurchase">
                                <input type="button" value="Add to Cart" ng-disabled="!product.enabled" ng-click="AddToCart(product.productId,product.name,product.price)"/>
                            </td>
                        </tr>
                    </table>
                </li>
            </ul>
        </div>
    </section>
</div>